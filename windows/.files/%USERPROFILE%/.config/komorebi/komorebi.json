{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.json",
  "alt_focus_hack": true,
  "default_workspace_padding": 0,
  "default_container_padding": 8,
  "focus_follows_mouse": "Komorebi",
  // "mouse_follows_focus": true,
  "resize_delta": 50,
  "window_container_behaviour": "Create",
  "cross_monitor_move_behaviour": "Insert",
  "unmanaged_window_operation_behaviour": "Op",
  "border_width": 1,
  "border_offset": 0,
  "border": true,
  "border_colours": {
    "single": {
      "r": 66,
      "g": 165,
      "b": 245
    },
    "stack": {
      "r": 0,
      "g": 165,
      "b": 66
    },
    "monocle": {
      "r": 255,
      "g": 51,
      "b": 153
    }
  },
  "window_hiding_behaviour": "Cloak",
  "monitor_index_preferences": {},
  // "transparency": true,
  "transparency_alpha": 200,
  "display_index_preferences": {
    "0": "ACI24A4-5&e3797cd&0&UID4353",
    // dualup
    "1": "GSM5BF4-5&e3797cd&0&UID4358",
    // other
    "2": "DELA0C3-5&e3797cd&0&UID4352",
    // tablet
    "3": "HAT2380-5&e3797cd&0&UID4355"
  },
  "monitors": [
    {
      "workspaces": [
        {"name": "primary", "layout": "BSP"}
      ]
    },
    {
      "workspaces": [
        {"name": "dualup","layout": "HorizontalStack"}
      ]
    },
    {
      "workspaces": [
        {"name": "other", "layout": "HorizontalStack"}
      ]
    },
    {
      "workspaces": [
        {"name": "tablet", "layout": "BSP"}
      ]
    }
  ],
  "float_rules": [
    {
      // Steam toast notifications
      "id": "notificationtoasts_\\d+_desktop",
      "kind": "Title",
      "matching_strategy": "Regex"
    },
    {
      // Steam friends list
      "id": "Friends List",
      "kind": "Title",
      "matching_strategy": "Equals"
    },
    {
      "id": "Steam Settings",
      "kind": "Title",
      "matching_strategy": "Equals"
    },
    {
      "id": "(?i)cs(\\.exe)?",
      "kind": "Exe",
      "matching_strategy": "Equals"
    },
    {
      "id": "(?i)Roblox(Player|Studio)(Beta)?(\\.exe)?",
      "kind": "Exe",
      "matching_strategy": "Regex"
    },
    {
      "id": "(?i)CLIPStudio(\\.exe)?",
      "kind": "Exe",
      "matching_strategy": "Regex"
    },
    {
      "id": "(?i)bongo(\\.exe)?",
      "kind": "Exe",
      "matching_strategy": "Regex"
    },
    {
      // OBS popup windows (and maybe other apps that use Qt)?
      "id": "Qt(\\d)+QWindowIcon",
      "kind": "Class",
      "matching_strategy": "Regex"
    }
  ],
  "manage_rules": [
    {
      "id": "(?i)(powershell|pwsh)(\\.exe)?",
      "kind": "Exe",
      "matching_strategy": "Regex"
    },
    {
      "id": "(?i)conhost(\\.exe)?",
      "kind": "Exe",
      "matching_strategy": "Regex"
    },
    {
      "id": "(?i)steam",
      "kind": "Title",
      "matching_strategy": "Regex"
    }
  ],
  "animation": {
    "enabled": true,
    "duration": 250,
    "fps": 240,
    "style": "Linear"
  }
  // "stackbar": {
  //   "height": 16,
  //   "mode": "OnStack",
  //   "label": "Title",
  //   "tabs": {
  //     "width": 240,
  //     "focused_text": "#ffffff",
  //     "unfocused_text": "#c4c4c4",
  //     "background": "#221f1f"
  //   }
  // }
}